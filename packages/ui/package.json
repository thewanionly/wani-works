{
  "name": "@wani-works/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"pnpm dev:tsc\" \"pnpm dev:css\"",
    "dev:tsc": "tsc --watch",
    "dev:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles.css --watch",
    "build": "pnpm build:tsc && pnpm build:css",
    "build:tsc": "tsc",
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles.css --minify",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "exports": {
    "./badge": "./src/components/Badge/index.ts",
    "./button": "./src/components/Button/index.ts",
    "./input": "./src/components/Input/index.ts",
    "./styles": "./dist/styles.css",
    "./textarea": "./src/components/TextArea/index.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@storybook/react": "^9.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@wani-works/eslint-config": "workspace:^",
    "@wani-works/jest-config": "workspace:^",
    "@wani-works/prettier-config": "workspace:^",
    "@wani-works/tailwind-config": "workspace:^",
    "@wani-works/typescript-config": "workspace:^",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
